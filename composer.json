{
    "name": "teknoo/east-foundation",
    "type": "library",
    "description": "Universal package, including a symfony bundle, to allow developer to use the #East philosophy into there project with any framework supporting PSR-11 or with Symfony 3+.",
    "keywords": ["east", "controller", "design"],
    "homepage": "http://teknoo.software/east-framework",
    "license": ["MIT"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "psr/http-message": "~1.0",
        "teknoo/immutable": "~0.0.1",
        "teknoo/states": "^3.0.0",
        "teknoo/states-bundle": "^3.0.0",
        "container-interop/service-provider":"^0.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4.8",
        "squizlabs/php_codesniffer": "~2.8",
        "pdepend/pdepend": "~2.5",
        "phpmd/phpmd": "~2.6",
        "sebastian/phpcpd": "~3.0",
        "phploc/phploc": "~3.0",
        "symfony/symfony": "~3.0",
        "symfony/framework-bundle": "~3.0",
        "symfony/console": "~3.0",
        "symfony/validator": "~3.0",
        "symfony/monolog-bundle": "~2.9",
        "zendframework/zend-diactoros": "^1.3.0",
        "symfony/psr-http-message-bridge":"~0.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Teknoo\\East\\Foundation\\": "src/universal",
            "Teknoo\\East\\FoundationBundle\\": "src/symfony"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teknoo\\Tests\\East\\Foundation\\": "tests/universal",
            "Teknoo\\Tests\\East\\FoundationBundle\\": "tests/symfony"
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    }
}
