{
    "name": "teknoo/east-foundation",
    "type": "library",
    "description": "Universal package, including a symfony bundle, to allow developer to use the #East philosophy into there project with any framework supporting PSR-11 or with Symfony 3+.",
    "keywords": ["east", "controller", "design"],
    "homepage": "http://teknoo.software/east-framework",
    "license": ["MIT"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "ext-json": "*",
        "psr/http-message": "~1.0",
        "teknoo/immutable": "^1.0.2",
        "teknoo/states": "^3.3.4",
        "teknoo/recipe": "^1.3.3",
        "psr/container-implementation": "~1.0",
        "php-di/php-di": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.2",
        "squizlabs/php_codesniffer": "~3.4",
        "pdepend/pdepend": "~2.5",
        "phpmd/phpmd": "~2.6",
        "sebastian/phpcpd": "~4.1",
        "phploc/phploc": "~5.0",
        "behat/behat": "~3.5",
        "symfony/routing": "~3.4||~4.3",
        "symfony/console": "~3.4||~4.3",
        "symfony/yaml": "~3.4||~4.3",
        "symfony/templating": "~3.4||~4.3",
        "symfony/security": "~3.4||~4.3",
        "symfony/serializer": "~3.4||~4.3",
        "zendframework/zend-diactoros": "~1.8",
        "symfony/psr-http-message-bridge":"~1.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Teknoo\\East\\Foundation\\": "src/universal",
            "Teknoo\\East\\FoundationBundle\\": "src/symfony"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teknoo\\Tests\\East\\Foundation\\": "tests/universal",
            "Teknoo\\Tests\\East\\FoundationBundle\\": "tests/symfony"
        }
    },
    "archive": {
        "exclude": ["demo", "vendor", ".idea"]
    }
}
