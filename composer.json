{
    "name": "teknoo/east-foundation",
    "type": "library",
    "description": "Universal package, including a symfony bundle, to allow developer to use the #East philosophy into there project with any framework supporting PSR-11 or with Symfony 3+.",
    "keywords": ["east", "controller", "design"],
    "homepage": "http://teknoo.software/east-framework",
    "license": ["MIT"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "require": {
        "php": "~7.4",
        "ext-json": "*",
        "psr/http-message": "~1.0",
        "teknoo/immutable": "^2.0.1",
        "teknoo/states": "^4.0.9",
        "teknoo/recipe": "^2.0.6",
        "psr/container-implementation": "~1.0",
        "psr/http-factory": "~1.0",
        "php-di/php-di": "~6.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~9.1",
        "squizlabs/php_codesniffer": "~3.5",
        "pdepend/pdepend": "~2.8",
        "sebastian/phpcpd": "~5.0",
        "phploc/phploc": "~6.0",
        "phpstan/phpstan": "^0.12.26",
        "behat/behat": "~3.7",
        "symfony/framework-bundle": "~4.4||~5.1",
        "symfony/routing": "~4.4||~5.1",
        "symfony/console": "~4.4||~5.1",
        "symfony/yaml": "~4.4||~5.1",
        "symfony/security": "~4.4||~5.1",
        "symfony/serializer": "~4.4||~5.1",
        "symfony/psr-http-message-bridge":"~1.3||~2.0",
        "twig/twig": "~2.0||~3.0",
        "laminas/laminas-diactoros": "~2.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Teknoo\\East\\Foundation\\": "src",
            "Teknoo\\East\\Diactoros\\": "infrastructures/laminas",
            "Teknoo\\East\\FoundationBundle\\": "infrastructures/symfony",
            "Teknoo\\East\\Twig\\": "infrastructures/twig"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teknoo\\Tests\\East\\Foundation\\": "tests/universal",
            "Teknoo\\Tests\\East\\Diactoros\\": "tests/infrastructures/laminas",
            "Teknoo\\Tests\\East\\FoundationBundle\\": "tests/infrastructures/symfony",
            "Teknoo\\Tests\\East\\Twig\\": "tests/infrastructures/twig"
        }
    },
    "archive": {
        "exclude": ["docs", "features", ".idea"]
    },
    "extra": {
        "thanks": {
            "name": "teknoo/recipe",
            "url": "https://github.com/TeknooSoftware/recipe"
        }
    }
}
